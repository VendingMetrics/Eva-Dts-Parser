<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/relativeCardviewError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_card_selection"
            android:padding="8dp"
            android:elevation="30dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tvEventDescription"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:autoSizeTextType="uniform"
                android:background="#eac13a"
                android:gravity="left"
                android:elevation="5dp"
                android:padding="4dp"
                android:text="@string/product" />

            <TextView
                android:id="@+id/tvEventCode"
                android:layout_width="55dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvEventDescription"
                android:autoSizeTextType="uniform"
                android:gravity="center"
                android:text="OBC_34"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#7e0b13"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEventDescription"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/tvEventCode"
                android:background="@color/colorPrimary"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Date"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"

                />

            <TextView
                android:id="@+id/tvEventDefinition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvEventDate"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvEventCode"
                android:paddingLeft="5dp"
                android:text="Definition"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                android:background="@drawable/background_row_event"/>








        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>